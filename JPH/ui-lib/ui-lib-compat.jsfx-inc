function oneway_switch(value, text, size, textsize) local(state) (
  ui_click() ? (
    value = !value;
    uix_undo_point();
  );

   ui_push_height(size);
      ui_align(0.9,-1);
          ui_push_width(size);

      control_background_inset();
      control_finish_inset();

      state = control_state();
      value == !option_value ? (
        ui_pad(2, 2);
        control_background_enabled(state);
        control_finish_enabled(state);
      );
      ui_pop();
    ui_pop();
        ui_align(0,-1);
        ui_font(#face, textsize, 0, 0);
        ui_text(text);
  value;
);

