function labelled_switch(value, label0, label1) (
       ui_push_height(15);
       ui_align(.9,1);
              ui_push_width(30);
                     value = control_switch(value);
              ui_pop();
       ui_pop();
       ui_font(#face, 10, 0, 0);
       ui_align(0.3,-1);
       value == 0 ? (
                    ui_text(label0);
       ) : (
                    ui_text(label1);
       );
       value;
);

function multipleway_switch(sliddy, text, vali, size, textsize) (
